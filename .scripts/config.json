{
  "less": {
    "files": "./src/less/{home,blog,post,archive,about,talks}.less",
    "output": "./_includes/styles/"
  },
  "bundles": [
    {
      "input": "./src/js/critical.js",
      "output": "./_includes/scripts/critical.liquid"
    },
    {
      "input": "./src/js/font.js",
      "output": "./assets/js/font.js"
    },
    {
      "input": "./src/js/prefetch.js",
      "output": "./assets/js/prefetch.js"
    }
  ],
  "favicon": {
    "entry": "./src/favicon/favicon.png",
    "output": "./assets/favicon/",
    "path": "/assets/favicon/",
    "html": "./_includes/favicons.liquid"
  },
  "images": [
    {
      "entry": "./src/favicon/favicon.png",
      "output": "./assets/images/twitter-card-image.jpeg",
      "quality": 90,
      "resize": [
        240,
        240
      ]
    }
  ]
}